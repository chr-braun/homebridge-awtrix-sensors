{
  "pluginAlias": "AwtrixSensors",
  "pluginType": "platform",
  "schema": {
    "type": "object",
    "properties": {
      "platformName": {
        "title": "Platform Name",
        "type": "string",
        "default": "AwtrixSensors",
        "description": "Name of the AWTRIX Sensors platform"
      },
      "mqttHost": {
        "title": "MQTT Host",
        "type": "string",
        "default": "localhost",
        "description": "MQTT broker host address"
      },
      "mqttPort": {
        "title": "MQTT Port",
        "type": "integer",
        "default": 1883,
        "minimum": 1,
        "maximum": 65535,
        "description": "MQTT broker port"
      },
      "mqttUsername": {
        "title": "MQTT Username",
        "type": "string",
        "default": "",
        "description": "MQTT broker username"
      },
      "mqttPassword": {
        "title": "MQTT Password",
        "type": "string",
        "default": "",
        "description": "MQTT broker password"
      },
      "awtrixIp": {
        "title": "AWTRIX IP Address",
        "type": "string",
        "default": "192.168.178.151",
        "description": "IP address of the AWTRIX device"
      },
      "awtrixPort": {
        "title": "AWTRIX Port",
        "type": "integer",
        "default": 7001,
        "minimum": 1,
        "maximum": 65535,
        "description": "AWTRIX device port"
      },
      "discoveredSensors": {
        "title": "Gefundene Sensoren",
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string",
              "title": "Sensor Name"
            },
            "type": {
              "type": "string",
              "title": "Sensor Type"
            },
            "topic": {
              "type": "string",
              "title": "MQTT Topic"
            },
            "value": {
              "type": "string",
              "title": "Aktueller Wert"
            },
            "unit": {
              "type": "string",
              "title": "Einheit"
            },
            "quality": {
              "type": "number",
              "title": "Qualit√§t (0-100)"
            },
            "lastSeen": {
              "type": "string",
              "title": "Zuletzt gesehen"
            }
          }
        },
        "description": "Automatisch gefundene MQTT-Sensoren"
      }
    },
    "required": ["mqttHost", "mqttPort", "mqttUsername", "mqttPassword", "awtrixIp", "awtrixPort"]
  }
}